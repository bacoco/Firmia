{
  "name": "firmia",
  "version": "1.0.0",
  "description": "Firmia - French Enterprise Data Integration. MCP server providing unified access to INSEE, Banque de France, and INPI APIs for comprehensive French business data.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "firmia": "dist/index.js"
  },
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "clean": "rm -rf dist/",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "prepack": "npm run build",
    "prepublishOnly": "npm run lint && npm run typecheck"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "node-cache": "^5.1.2",
    "p-limit": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/p-limit": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "llm",
    "insee",
    "banque-france",
    "inpi",
    "french-enterprises",
    "french-companies",
    "api-integration",
    "business-data",
    "enterprise-search",
    "financial-data",
    "typescript",
    "nodejs"
  ],
  "author": {
    "name": "Firmia Contributors",
    "email": "contact@firmia.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bacoco/Firmia.git"
  },
  "homepage": "https://github.com/bacoco/Firmia#readme",
  "bugs": {
    "url": "https://github.com/bacoco/Firmia/issues"
  },
  "files": [
    "dist/**/*",
    "docs/**/*",
    "examples/**/*",
    ".env.example",
    "README.md",
    "LICENSE"
  ]
}
